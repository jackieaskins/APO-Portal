<p id="notice"><%= notice %></p>

<h1>Fellowships</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Host(s)</th>
      <th>Fellowship Type</th>
      <th>Location</th>
      <th>Description</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fellowships.each do |fellowship| %>
      <tr>
        <td><%= fellowship.name %></td>
        <td>
          <% fellowship.hosts.each do |host| %>
            <%= "#{host.preferred_full_name} " %>
          <% end %>
        </td>
        <td><%= fellowship.fellowship_type %></td>
        <td><%= fellowship.location %></td>
        <td><%= fellowship.description %></td>
        <td><%= fellowship.start_time %></td>
        <td><%= fellowship.end_time %></td>
        <td><%= link_to 'Show', fellowship %></td>
        <td><%= link_to 'Edit', edit_fellowship_path(fellowship) %></td>
        <td><%= link_to 'Destroy', fellowship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

